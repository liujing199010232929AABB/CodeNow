    <input type="radio" name="freeze" id="freeze" value="0" {if $bcjyz[0].freeze==0} checked="checked"{/if} />
    解冻
                  <br/><br/>                                                      

    <input type="hidden" name="bcjyzid" value="{$bcjyz[0].id}">
       <input type="submit" value="提交" />
                </p>
  </form> 
    </div>
    {/if} </div>
</div>
